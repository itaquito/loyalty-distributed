{
  "workspace": [
    "./db",
    "./business",
    "./customer",
    "./transaction"
  ],
  "imports": {
    "@grpc/grpc-js": "npm:@grpc/grpc-js@1.12.6",
    "@types/pg": "npm:@types/pg@^8.15.6",
    "drizzle-kit": "npm:drizzle-kit@^0.31.7",
    "drizzle-orm": "npm:drizzle-orm@^0.44.7",
    "drizzle-zod": "npm:drizzle-zod@^0.8.3",
    "pg": "npm:pg@^8.16.3",
    "zod": "npm:zod@^4.1.13"
  },
  "tasks": {
    "db:generate": "deno run -A --node-modules-dir npm:drizzle-kit generate",
    "db:migrate": "deno run -A --node-modules-dir npm:drizzle-kit migrate",
    "db:push": "deno run -A --node-modules-dir npm:drizzle-kit push",
    "db:studio": "deno run -A --node-modules-dir npm:drizzle-kit studio"
  }
}
